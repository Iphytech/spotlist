{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts", /* Include every ts file in source folder */
  ],
  "exclude": [
    "node_modules" /* exclude everything in  node_modules */
  ]
}
